<div class="container">

  <div class="justify-content-center">
    <div class="card mt-3">  
      <%= render @article %>
      <div class="d-flex justify-content-between">
        <%= button_to "Destroy this article", @article, method: :delete, class: 'btn btn-danger m-3' %>
        <%= link_to "Edit", edit_article_path, class: 'btn btn-success m-3' %>
      </div>
    </div>
    <div class="d-flex justify-content-center mt-3">
      <%= link_to "Back to articles", articles_path, class: 'btn btn-primary' %>
    </div>
  </div>

  <div class="mt-3">
    <h3 class="mt-3">Comments</h3>
    <%= render @article.comments%>

    <h3 class="mt-3">Write</h3>
    <%= render 'comments/form' %>
  </div>
</div>

